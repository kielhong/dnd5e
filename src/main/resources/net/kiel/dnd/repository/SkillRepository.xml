<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="net.kiel.dnd.repository.SkillRepository">
    <resultMap id="skillMap" type="net.kiel.dnd.model.Skill">
        <id property="skillId" column="skill_id" />
        <result property="skillTypeId" column="skill_type_id"/>
        <result property="name" column="name"/>
        <result property="abilityType" column="ability_type"  typeHandler="org.apache.ibatis.type.EnumOrdinalTypeHandler"/>
        <result property="proficiency" column="proficiency"/>
    </resultMap>
    
    <select id="selectByCharacter" parameterType="int" resultMap="skillMap">
        SELECT     skill_id, skill.skill_type_id, skill_type.name, ability.ability_type, proficiency 
        FROM       skill 
        INNER JOIN skill_type ON skill.skill_type_id = skill_type.skill_type_id 
        INNER JOIN ability ON skill.ability_id = ability.ability_id
        WHERE      character_id = #{caracterId}
        ORDER BY  skill.skill_type_id ASC
    </select>
</mapper>